<div class="card mb-3">
  <h2 class="card-header h4">
    Application for <%= application.title %> at <%= application.company %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">

      <dt>Title</dt>
      <dd><%= application.title %></dd>

      <dt>Company</dt>
      <dd><%= application.company %></dd>

      <dt>Due on</dt>
      <dd><%= application.due_on %></dd>

      <dt>Submitted</dt>
      <dd>
        <% if application.submitted %>
          <i class="fas fa-check-square text-success"></i> Submitted
        <% else %>
          <i class="fas fa-times text-danger"></i> Not yet submitted
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back application, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_application_url(application), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to application, method: :delete, data: { confirm: "Do you really want to delete this application?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(application.updated_at) %> ago
  </div>
</div>
