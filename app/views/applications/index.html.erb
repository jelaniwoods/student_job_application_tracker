<div class="row mb-3">
  <div class="col-md-12">
    <h1 class="display-4">
      My Applications

      <%= link_to new_application_path, class: "btn btn-lg btn-outline-secondary" do %>
        <i class="fas fa-plus fa-fw"></i>
      <% end %>
    </h1>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>
              Title
            </th>

            <th>
              Company
            </th>

            <th>
              Due on
            </th>

            <th>
              Submitted
            </th>

            <th>
            </th>
          </tr>
        </thead>

        <tbody>
          <%= render collection: @applications, partial: "table_row", as: :application %>
        </tbody>
      </table>
    </div>
  </div>
</div>
