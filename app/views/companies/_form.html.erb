<% was_validated = company.errors.any? %>

<%= form_with(model: company, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = company.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% company.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% sector_class = "form-control" %>
    <% sector_was_invalid = company.errors.include?(:sector) %>

    <% if was_validated %>
      <% if sector_was_invalid %>
        <% sector_class << " is-invalid" %>
      <% else %>
        <% sector_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :sector %>
    <%= f.text_field :sector, class: sector_class, placeholder: "Enter sector" %>
    <% if sector_was_invalid %>
      <% company.errors.full_messages_for(:sector).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
